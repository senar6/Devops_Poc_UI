<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>DevOps_POC</title>
    <link rel="Stylesheet" href="/static/css/Site.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Exo:900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
	<script src="/static/scripts/WorkOrders.js"></script>
    
</head>
<body>
    <div class="container wo_container" style="width:100%" ng-app="WorkOrders" ng-controller="woCtrl">

        <div class="row  row-1" style="padding:1%">
            <div class="col-md-12">
                <h3>My Work Orders</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 align-center" style="padding:2%">
                <img src="/static/images/user.png" alt="User" style="width:50%;height:50%" />
            </div> 
            <div class="col-md-9" style="text-align : left; padding-top:5%">
                <div class="row" style="font-size:medium">
                    <b><%= workorders[0].name %></b>
                </div>
                <div class="row">
                    <%= workorders[0].area %>
                </div>
            </div> 
        </div>

        <div class="row row-1" style="font-size:large;padding:1%">
            <div class="big-title">
                AGP
            </div>
            Annual Grid Patrol
        </div>

        <div class="row">
            <div class="col-md-6 col-md-offset-3 agp_wo">
                View All AGP Work Orders
            </div>
        </div>

        <div class="row align-center wopa">
            Work Orders Per Area
        </div>


        <!-- Work Orders Starts-->
        <% workorders.forEach(function(wo) { %>
    
            <div class="row wopa" style="padding-top:2%">
                <div class="col-md-2 col-md-offset-3 district_wo">
                    <%= wo.woarea %>
                </div>
                <div class="col-md-3 district_wo">
                    <b><%= wo.woorderno %></b>
                </div>
                <div class=" col-md-1 select_wo align-center">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </div>
            </div>

        <% }); %>
        <!--Work Order Ends-->

        <div class="row"style="padding:2%"></div>
        <div class="row align" style="padding:2%;background-color:#FED140">

            <div class="col-md-5">
                <span class="glyphicon glyphicon-unchecked"></span> Today's AGP Safety Tailboard
            </div>
			<form action = "/acknowledge" method="post" id="ackView">
				<input type="hidden" id="user" name="user" value="<%= workorders[0].name %>" />
				<div class="col-md-2 col-md-offset-5 ackView buttonlink" style="font-size:large" ng-click="viewAcknowledgement()">
						View<span class="glyphicon glyphicon-chevron-right"></span>
				</div>
			</form>
        </div>

    </div>
</body>
</html>